generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL") // DATABASE_URL
}

model events {
  id             Int       @id @default(autoincrement())
  event_city     String    @db.VarChar(100)
  event_title    String    @db.VarChar(255)
  event_datetime DateTime? @db.Timestamptz(6)
  address        String?   @db.VarChar(255)
  description    String?
  image          String?   @db.VarChar(255)
  ticket_price   String?   @db.VarChar(100)
  website_url    String?   @db.VarChar(255)
  country        String?   @db.VarChar(100)
  category       String?   @db.VarChar(100)
}

model posts {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  country    String?   @db.VarChar(100)
  category   String?   @db.VarChar(100)
  title      String?   @db.VarChar(255)
  text       String?
  image      String?   @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

model events_crawler {
  id             Int       @id @default(autoincrement())
  event_city     String    @db.VarChar(100)
  event_title    String    @db.VarChar(255)
  event_datetime DateTime? @db.Timestamptz()
  address        String?   @db.VarChar(255) 
  description    String?   @db.Text         
  image          String?   @db.VarChar(255) 
  ticket_price   String?   @db.VarChar(100) 

  website_url    String    @unique @db.VarChar(255) 

  country        String?   @db.VarChar(100) 
  category       String?   @db.VarChar(100) 

  crawled_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  @@map("events_crawler") 
}